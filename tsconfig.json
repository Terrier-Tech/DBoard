{
    "compilerOptions": {
        "outDir": "./docs/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "downlevelIteration": true,
        "module": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "ES6",
        "allowJs": true,
        "lib": ["ESNext", "DOM"],
        "jsx": "react",
        "types": ["vite-plugin-svgr/client"]
    },
    "include": [
        "./package.json",
        "./src/**/*"
    ]
}